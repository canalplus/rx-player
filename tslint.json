{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "align": true,
    "array-type": {
      "options": ["array-simple"]
    },
    "adjacent-overload-signatures": true,
    "arrow-parens": false,
    "arrow-return-shorthand": false,
    "await-promise": true,
    "ban-comma-operator": false,
    "binary-expression-operand-order": true,
    "callable-types": true,
    "class-name": true,
    "completed-docs": false,
    "curly": true,
    "cyclomatic-complexity": [false, 20],
    "deprecation": true,
    "encoding": true,
    "eofline": true,
    "file-header": [true, "Copyright \\d{4}"],
    "forin": { "severity": "warning" },
    "import-spacing": true,
    "indent": [true, "spaces", 2],
    "interface-name": true,
    "interface-over-type-literal": true,
    "jsdoc-format": true,
    "linebreak-style": [true, "LF"],
    "match-default-export-name": false,
    "max-classes-per-file": [true, 5, "exclude-class-expressions"],
    "max-file-line-count": [false, 300],
    "max-line-length": { "severity": "warning", "options": 90 },
    "match-default-export-name": false,
    "member-access": false,
    "new-parens": true,
    "no-angle-bracket-type-assertion": { "severity": "none" },
    "no-any": false,
    "no-arg": true,
    "no-bitwise": false,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": false,
    "no-console": true,
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": false,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-inferrable-types": false,
    "no-inferred-empty-object-type": true,
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-magic-numbers": false,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": true,
    "no-non-null-assertion": true,
    "no-null-keyword": false,
    "no-object-literal-type-assertion": true,
    "no-parameter-reassignment": true,
    "no-reference": true,
    "no-require-imports": false,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": false,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-submodule-imports": false,
    "no-switch-case-fall-through": false,
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "no-trailing-whitespace": true,
    "no-unbound-method": [false, "ignore-static"], // TODO
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-class": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-type-assertion": true,
    "no-unnecessary-qualifier": true,
    "no-unsafe-any": false, // TODO
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-requires": true,
    "no-var-keyword": true,
    "no-void-expression": false,
    "number-literal-format": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "object-literal-sort-keys": false,
    "one-line": { "severity": "warning" },
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "only-arrow-functions": false,
    "ordered-imports": true,
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-for-of": false,
    "prefer-function-over-method": [true, "allow-public", "allow-protected"],
    "prefer-method-signature": false,
    "prefer-object-spread": false,
    "prefer-switch": [true, {"min-cases": 3}],
    "prefer-template": false,
    "promise-function-async": false,
    "restrict-plus-operands": false,
    "return-undefined": true,
    "strict-boolean-expressions": false,
    "strict-type-predicates": false,
    "use-default-type-parameter": true,
    "quotemark": [true, "double", "avoid-template"],
    "radix": true,
    "semicolon": [true, "always"],
    "space-within-parens": [true, 0],
    "switch-default": false,
    "switch-final-break": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "type-literal-delimiter": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef-whitespace": [true, "onespace", "onespace"],
    "typeof-compare": true,
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": false,
    "whitespace": true
  },
  "rulesDirectory": ["."]
}
