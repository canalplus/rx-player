{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "align": true,
    "array-type": {
      "options": ["array-simple"]
    },
    "arrow-parens": false,
    "arrow-return-shorthand": false,
    "binary-expression-operand-order": true,
    "callable-types": true,
    "class-name": true,
    "completed-docs": false,
    "cyclomatic-complexity": [false, 20],
    "curly": true,
    "encoding": true,
    "eofline": true,
    "file-header": [true, "Copyright \\d{4}"],
    "forin": { "severity": "warning" },
    "import-spacing": true,
    "indent": [true, "spaces", 2],
    "interface-name": true,
    "interface-over-type-literal": true,
    "jsodc-format": true,
    "linebreak-style": [true, "LF"],
    "match-default-export-name": false,
    "max-classes-per-file": [true, 5, "exclude-class-expressions"],
    "max-file-line-count": [false, 300],
    "max-line-length": { "severity": "warning", "options": 90 },
    "member-access": false,
    "new-parens": true,
    "no-angle-bracket-type-assertion": { "severity": "none" },
    "no-arg": true,
    "no-bitwise": false,
    "no-conditional-assignment": false,
    "no-console": true,
    "no-construct": true,
    "no-default-export": false,
    "no-duplicate-imports": true,
    "no-duplicate-variable": true,
    "no-mergeable-namespace": true,
    "no-require-imports": false,
    "no-empty": true,
    "no-string-throw": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-var-requires": false,
    "number-literal-format": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "object-literal-sort-keys": false,
    "one-line": { "severity": "warning" },
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "only-arrow-functions": false,
    "ordered-imports": true,
    "prefer-const": true,
    "prefer-for-of": false,
    "prefer-function-over-method": [true, "allow-public", "allow-protected"],
    "prefer-method-signature": false,
    "prefer-switch": [true, {"min-cases": 3}],
    "prefer-template": false,
    "quotemark": [true, "double", "avoid-template"],
    "semicolon": [true, "always"],
    "space-within-parens": [true, 0],
    "switch-final-break": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "type-literal-delimiter": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef-whitespace": ["onespace", "onespace"],
    "use-isnan": true,
    "variable-name": false,
    "whitespace": true
  },
  "rulesDirectory": ["."]
}
