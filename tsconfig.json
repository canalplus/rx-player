{
  "compilerOptions": {
    "outDir": "./dist/es2017",
    "declaration": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "types": ["jest"],
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "module": "esnext",
    "typeRoots": [
      "./src/typings/",
      "./src/globals.prod.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude":[
    "./src/**/*.test.ts",
    "./src/globals.dev.d.ts"
  ]
}
