{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "types": ["jest"],
    "moduleResolution": "node",
    "typeRoots": [
      "./src/typings/next-tick.d.ts",
      "./src/typings/object-assign.d.ts",
      "./src/typings/globals.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": ["./src/**/*.ts"]
}
